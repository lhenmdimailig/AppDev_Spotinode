<!DOCTYPE html> 
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Songs</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-gradient">

    <header class="header">
        <div class="container">
            <h1 class="logo">musicalhen</h1>
            <nav class="nav">
                <a href="/songs" class="nav-link">Songs</a>
                <a href="/upload" class="nav-link">Add Song</a>
                <a href="/playlist" class="nav-link">Playlist</a>
            </nav>
        </div>
    </header>

    <main class="main-content">
        <h2 class="section-title">Songs For You</h2>

        <!-- Search Form -->
        <form action="/search" method="get" class="search-form">
            <input type="text" name="query" placeholder="Search by title or artist" required class="search-input">
            <button type="submit" class="search-button">Search</button>
        </form>

        <!-- Songs Grid -->
        <div class="songs-grid">
            <% songs.forEach(song => { %>
                <div class="song-card">
                    <div class="song-details">
                        <h3 class="song-title"><%= song.title %></h3>
                        <p>Artist: <%= song.artist %></p>
                        <p>Album: <%= song.album %></p>
                        <a href="/play/<%= song.id %>" class="play-button">
                            <i class="fas fa-play"></i> Play
                        </a>
                          
        <form action="/delete/<%= song.id %>" method="POST" style="display:inline;">
            <button type="submit" class="delete-button" onclick="return confirm('Are you sure you want to delete this song?');">
                Delete
            </button>
        </form>
                    </div>
                </div>
            <% }) %>
        </div>
      

    </main>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</body>
</html>
